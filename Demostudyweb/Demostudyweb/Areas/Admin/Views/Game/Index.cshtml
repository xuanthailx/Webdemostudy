@model PagedList.IPagedList<Model.EF.Game>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@section header{
    Quản lí Môn thi đấu
    }
<div class="row">
    <div class="col-md-12">
        <div class="content-box-large">
            <div class="panel-heading">
                <div class="panel-title"> Danh sách môn thi đấu</div>

                <div class="panel-options">
                    <a href="#" data-rel="collapse"><i class="glyphicon glyphicon-refresh"></i></a>
                    <a href="#" data-rel="reload"><i class="glyphicon glyphicon-cog"></i></a>
                </div>
            </div>
            <div class="panel-body">
                <div class="col-md-12">
                    @using (Html.BeginForm("Index", "Game", FormMethod.Get))
                    {
                        <div class="row form-group">
                            <div class="col-md-10">
                                <div class="row">
                                    <div class="col-md-5">
                                        <input type="text" class="form-control" name="searchString" value="@ViewBag.SearchString" />
                                    </div>
                                    <div class="col-md-5">
                                        <button class="btn btn-success" type="submit">Tìm kiếm</button>
                                        <a type="button" class="btn btn-primary" href="/Admin/Game/Create">Thêm mới</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    <div>
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Type</th>
                                    <th>MaxPeople</th>
                                    <th>Duration</th>
                                    <th>Champion</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr id="row_@item.ID">
                                        <td>
                                            <a href="/Admin/Game/Edit/@item.ID">Sửa</a>
                                            @Ajax.ActionLink("Xóa", "Delete", new { @id = item.ID }, new AjaxOptions
                                       {
                                           Confirm = "Bạn có muốn xóa bản ghi này không ?",
                                           OnComplete = "$('row_" + @item.ID + "').remove()",
                                           HttpMethod = "Delete"

                                       })
                                        </td>
                                        <td>@item.Name</td>
                                        <td>@item.Type</td>
                                        <td>@item.MaxPeopleAllowed</td>
                                        <td>@item.Duration</td>
                                        <td>@item.Champion</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                </div>
            </div>
        </div>
    </div>
</div>
