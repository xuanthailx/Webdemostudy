
@model PagedList.IPagedList<Model.EF.User>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Quản lí tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@section header{
    Quản lí tài khoản
}
<div class="row">
    <div class="col-md-12">
        <div class="content-box-large">
            <div class="panel-heading">
                <div class="panel-title"> Dánh sách Tài khoản</div>

                <div class="panel-options">
                    <a href="#" data-rel="collapse"><i class="glyphicon glyphicon-refresh"></i></a>
                    <a href="#" data-rel="reload"><i class="glyphicon glyphicon-cog"></i></a>
                </div>
            </div>
            <div class="panel-body">
                <div class="col-md-12">
                @using (Html.BeginForm("Index", "User", FormMethod.Get))
                {
                    <div class="row form-group">
                        <div class="col-md-10">
                            <div class="row">
                                <div class="col-md-5">
                                    <input type="text" class="form-control" name="searchString" value="@ViewBag.SearchString" />
                                </div>
                                <div class="col-md-5">
                                    <button class="btn btn-success" type="submit">Tìm kiếm</button>
                                    <a type="button" class="btn btn-primary" href="/Admin/User/Create">Thêm mới</a>                                   
                                </div>
                            </div>
                        </div>
                    </div>

                }
                <div>
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.ID">
                                    <td>
                                        <a href="/Admin/User/Edit/@item.ID">Sửa</a>
                                        @Ajax.ActionLink("Xóa", "Delete", new { @id = item.ID }, new AjaxOptions
                               {
                                   Confirm = "Bạn có muốn xóa bản ghi này không ?",
                                   OnComplete = "$('row_" + @item.ID + "').remove()",
                                   HttpMethod = "Delete"

                               })
                                    </td>
                                    <td>@item.Email</td>
                                    <td>@item.Role</td>
                                    <td>@item.Status</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                @Html.PagedListPager(Model,page => Url.Action("Index",new { page, @searchString = @ViewBag.SearchString }) )
            </div>
        </div>
    </div>
</div>
</div>